@model IEnumerable<MyForum.BL.Entities.Blog>

@{
    ViewData["Title"] = "My Blogs";
}

@{
    int i = 1;
}

<h1>My Blogs</h1>
<br />
<div class="row">
    <a class="btn btn-outline-success col-6" asp-action="Create"><i class="bi bi-stickies-fill"></i> Create A New Blog</a>
</div>

<br />
@while (ViewData[i.ToString()] != null)
{

    <h3>Theme @ViewData[i.ToString()]?.ToString()</h3>

    <table class="table">
        <thead>
            <tr class="text-center">
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.ThemeId == i)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.BlogId"><i class="bi bi-ticket-detailed-fill"></i> Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.BlogId"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.BlogId"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    i++;
    <hr />
    <br />
}