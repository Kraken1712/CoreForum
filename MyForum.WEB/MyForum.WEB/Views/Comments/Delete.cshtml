@model MyForum.BL.Entities.Comment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        @if (Model.Text != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Text)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Text)
        </dd>
        }
        @if (Model.Img != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Img)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Img)
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CommentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.CommentId"><i class="bi bi-back"></i> Back to List</a>
    </form>
</div>
